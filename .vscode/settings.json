{
  // Git 相关设置
  "git.autorefresh": true,
  "git.autofetch": false,
  "git.enableSmartCommit": false,
  "git.confirmSync": false,
  
  // 文件监视器排除（减少CPU占用）
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.hg/store/**": true,
    "**/DEBUG*.md": true,
    "**/DEBUGGING*.md": true,
    "**/static/audio/**": true,
    "**/__pycache__/**": true,
    "**/venv/**": true,
    "**/.env": true
  },
  
  // 文件资源管理器排除
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true,
    "**/node_modules": true
  },
  
  // 搜索排除
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/static/audio": true,
    "**/__pycache__": true,
    "**/.git": true,
    "**/DEBUG*.md": true
  }
}